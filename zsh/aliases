alias HD="df -h"
alias lh="ls -lh"
alias RestartNetwork="sudo systemctl restart NetworkManager.service"
alias NetworkStatus="sudo systemctl status NetworkManager.service"
alias path="echo $PATH"
alias SSH_KEY="ssh-keygen -t rsa" 
alias BoostVersion="dpkg -s libboost-dev | grep 'Version'"

alias buildRPC="cmake -D CMAKE_C_COMPILER=${CC} -D RPC_WITH_TESTS:BOOL=ON -D CMAKE_CXX_COMPILER=${CXX} -D CMAKE_VERBOSE_MAKEFILE=On -D CMAKE_BUILD_TYPE=Release -S ${RPC_SOURCE_DIR} -B ${RPC_BUILD_DIR}  && make -j12 "

#debug
alias buildRPC_GCC="time make clean && cmake -D CMAKE_VERBOSE_MAKEFILE=On -D RPC_COMPILE_WITH_CLANG=False -D RPC_WITH_TESTS:BOOL=OFF -D WITH_CLANG_TIDY=False -D CMAKE_BUILD_TYPE=Debug -S ${RPC_SOURCE_DIR} -B ${RPC_BUILD_DIR} && time make -j12"
